<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Folha de Pagamento Mensal</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #005A9C;
            color: white;
            padding: 10px 0;
            text-align: center;
        }
        .container {
            width: 80%;
            margin: 20px auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        table th {
            background-color: #005A9C;
            color: white;
        }
        .btn {
            padding: 8px 12px;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            display: inline-block;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .btn-primary {
            background-color: #3498DB;
        }
        .btn-primary:hover {
            background-color: #2980B9;
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(52, 152, 219, 0.5);
        }
        .action-buttons {
            margin-top: 20px;
            text-align: left;
        }
    </style>
</head>
<body>

    <header>
        <h1>Relatório de Pagamento Mensal</h1>
    </header>

    <div id="tabelaFolha">
        <h3 style="text-align: center;">Resumo da Folha de Pagamento</h3>
        <table>
            <thead>
                <tr>
                    <th>Mês</th>
                    <th>Ano</th>
                    <th>Nome do Funcionário</th>
                    <th>Salário</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < folha.length; i++) { %>
                <tr>
                    <td><%= folha[i].mes %></td>
                    <td><%= folha[i].ano %></td>
                    <%  const funcMap = {};
                            funcionario.forEach(funcionario => {
                            funcMap[funcionario.id] = funcionario.nome;
                            }); %>
                    <td><%= funcMap[folha[i].idFunc] %></td>
                    <td>R$ <%= folha[i].salario %></td>
                </tr>
                <% } %>
            </tbody>
        </table><br><br>    
        <h3 style="text-align: center;">Média Salarial Mensal</h3>
        <table>
            <thead>
                <tr>
                    <th style="text-align: center;">Média</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-align: center;">R$ <%= parseFloat(listaMedia).toFixed(3) %>,00</td>
                </tr>
            </tbody>
        </table><br>

        <h3 style="text-align: center;">Total Mensal</h3>
        <table>
            <thead>
                <tr>
                    <th style="text-align: center;">Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-align: center;">R$ <%= parseFloat(listaTotal).toFixed(3) %>,00</td>
                </tr>
            </tbody>
        </table>
        
        <div class="action-buttons" style="padding-left: 33rem;">
            <button class="btn btn-primary" style="background-color: #333;" onclick="window.location.href='/registro'">
                <i class="fas fa-arrow-left"></i> Voltar
            </button>
            <button class="btn btn-primary" style="background-color: #E74C3C;" onclick="window.print()" ><i class="fas fa-file"></i> Baixar Folha de Pagamento</button>
        </div>
    </div><br>

</body>
</html>
