<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="/js/consulta/cadastrar.js"></script>
    <title>Cadastrar Consultas - Odonto Ferreira</title>
    <script>
        function validarDataConsulta(campo) {
            const dataInserida = new Date(campo.value);
            const hoje = new Date();
            const doisMesesDepois = new Date(); 

            doisMesesDepois.setMonth(hoje.getMonth() + 2);

            hoje.setHours(0, 0, 0, 0);
            doisMesesDepois.setHours(0, 0, 0, 0);
            dataInserida.setHours(0, 0, 0, 0);

            if (campo.value === "") {
                campo.style.borderColor = "red";
                alert("A data da consulta não pode estar vazia.");
                return false;
            }

            if (dataInserida < hoje) {
                alert("A data da consulta não pode ser anterior ao dia de hoje.");
                campo.style.borderColor = "red";
                return false;
            }

            if (dataInserida > doisMesesDepois) {
                alert("A data da consulta não pode ser superior a 2 meses.");
                campo.style.borderColor = "red";
                return false;
            }

            campo.style.borderColor = "";
            return true;
        }
        function validarHorario(campo) {
        const valor = campo.value;

        const horarioInicio = "08:00";
        const horarioFim = "18:00";

        if (valor < horarioInicio) {
            alert("O horário não pode ser anterior a 08:00.");
            campo.value = horarioInicio;
        } else if (valor > horarioFim) {
            alert("O horário não pode ser posterior a 18:00.");
            campo.value = horarioFim;
        }
    }

    </script>
    <style>
        * {
            box-sizing: border-box;
        }

        body,
        html {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            height: 100%;
            overflow: auto;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            background: linear-gradient(135deg, #6dd5ed, #2193b0);
            min-height: 100vh;
            position: relative;
            padding: 20px;
        }

        .background-interactive {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
            overflow: hidden;
        }

        .bubble {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            bottom: -100px;
            animation: float 10s infinite ease-in-out;
        }

        @keyframes float {
            0% {
                transform: translateY(0) translateX(0);
            }

            50% {
                transform: translateY(-300px) translateX(50px);
            }

            100% {
                transform: translateY(0) translateX(0);
            }
        }

        .login-wrapper {
            position: relative;
            z-index: 2;
            background: white;
            width: 100%;
            max-width: 800px;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 20px 30px rgba(0, 0, 0, 0.2);
            text-align: center;
            margin: 40px 0;
        }

        .login-wrapper h2 {
            font-weight: 700;
            margin-bottom: 20px;
            color: #333;
            font-size: 1.8rem;
        }

        .login-wrapper img {
            width: 80px;
            margin-bottom: 15px;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
        }

        .input-group {
            position: relative;
            flex: 1 1 calc(50% - 10px);
            margin-bottom: 20px;
        }

        .login-wrapper input,
        .login-wrapper select {
            width: 100%;
            padding: 10px 10px 10px 40px;
            border-radius: 30px;
            border: 1px solid #ccc;
            outline: none;
            font-size: 0.9rem;
        }

        .login-wrapper i {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #aaa;
        }

        .login-wrapper button {
            background: #007acc;
            color: #fff;
            border: none;
            padding: 15px;
            border-radius: 30px;
            width: 100%;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s;
        }

        .login-wrapper button:hover {
            background: #005b99;
        }

        .login-wrapper a {
            text-decoration: none;
            color: #007acc;
            font-size: 0.9rem;
        }

        .login-wrapper a:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .form-row {
                gap: 10px;
            }

            .input-group {
                flex: 1 1 100%;
                min-width: 100%;
            }
        }

        @media (max-width: 480px) {
            .login-wrapper {
                padding: 20px;
            }

            .login-wrapper h2 {
                font-size: 1.5rem;
            }

            .login-wrapper img {
                width: 60px;
            }

            .login-wrapper input,
            .login-wrapper select {
                padding: 10px 10px 10px 35px;
            }

            .login-wrapper button {
                padding: 12px;
            }
        }
    </style>
</head>

<body>
    <div class="background-interactive">
        <!-- Bolhas para efeito interativo -->
        <div class="bubble" style="width: 60px; height: 60px; left: 10%; animation-duration: 12s;"></div>
        <div class="bubble" style="width: 100px; height: 100px; left: 40%; animation-duration: 15s;"></div>
        <div class="bubble" style="width: 80px; height: 80px; left: 70%; animation-duration: 18s;"></div>
        <div class="bubble" style="width: 120px; height: 120px; left: 90%; animation-duration: 20s;"></div>
    </div>

    <div class="login-wrapper">
        <img src="https://img.icons8.com/cotton/64/tooth.png" alt="Odonto Ferreira">
        <% if(typeof ConsultaAlteracao=='undefined' ) { %>
        <h2>Cadastrar Consultas - Odonto Ferreira</h2>
        <form id="formulario">
            <div style="color: red" id="msgErro"></div>
            <div class="form-row">
                <div class="input-group">
                    <i class="fas fa-user"></i>
                    <select id="InputIdPaciente" required>
                        <option value="0">Selecione o Paciente</option>
                        <% for (let i = 0; i < consultas.length; i++) { %>
                            <option value="<%= consultas[i].id %>"><%= consultas[i].nome %></option>
                        <% } %>
                    </select>
                </div>
                <div class="input-group">
                    <i class="fas fa-stethoscope"></i>
                    <input type="text" id="InputNome" placeholder="Nome da Consulta" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-calendar-alt"></i>
                    <input type="date" id="InputDataAgendada" onblur="validarDataConsulta(this)" placeholder="Data Agendada" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-clock"></i>
                    <input type="time" id="InputHoraAgendada" placeholder="Hora Agendada" onblur="validarHorario(this)"  required>
                </div>
                <div class="input-group">
                    <i class="fas fa-id-badge"></i>
                    <select id="InputCroMedico" required>
                        <option value="0">Selecione o Dentista</option>
                        <% for (let i = 0; i < medicos.length; i++) { %>
                            <option value="<%= medicos[i].cro %>"><%= medicos[i].nome %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <button type="button" class="btnConfirmar">Cadastrar</button>
        </form>
        <% } else { %>
            <div class="login-wrapper">
                <h2>Atualizar Consultas - Odonto Ferreira</h2>
                <form id="formularioAlteracao">
                    <div style="color: red" id="msgErro"></div>
                    <input type="hidden" id="InputId" value="<%= ConsultaAlteracao.id %>"/>
                    <div class="form-row">
                        <div class="input-group">
                            <i class="fas fa-user"></i>
                            <select id="InputIdPaciente" required>
                                <% for (let i = 0; i < pacientes.length; i++) { %>
                                    <% if (pacientes[i].idPaciente == ConsultaAlteracao.idPaciente) { %>
                                    <option selected value="<%= pacientes[i].id %>"><%= pacientes[i].nome %></option>
                                    <%} else { %>
                                        <option value="<%=pacientes[i].id%>"><%= pacientes[i].nome %></option>
                                    <%} %>
                                <% } %>
                            </select>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-stethoscope"></i>
                            <input type="text" id="InputNome" placeholder="Nome da Consulta" value="<%= ConsultaAlteracao.nome %>" required>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-calendar-alt"></i>
                            <input type="date" id="InputDataAgendada" onblur="validarDataConsulta(this)" value="<%= ConsultaAlteracao.dataAgendada %>" required>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-clock"></i>
                            <input type="time" id="InputHoraAgendada" onblur="validarHorario(this)" value="<%= ConsultaAlteracao.horaAgendada %>" required>
                        </div>
                        <div class="input-group">
                            <i class="fas fa-id-badge"></i>
                            <select id="InputCroMedico" required>
                                <% for (let i = 0; i < medicos.length; i++) { %>
                                    <% if (medicos[i].croMedico == ConsultaAlteracao.croMedico) { %>
                                    <option selected value="<%= medicos[i].cro %>"><%= medicos[i].nome %></option>
                                    <%} else { %>
                                        <option value="<%=medicos[i].cro%>"><%= medicos[i].nome %></option>
                                    <%} %>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <button type="button" data-alteracao="true" class="btnConfirmar">Alterar</button>
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>
